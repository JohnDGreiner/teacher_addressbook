
<div class='row'>
  <h1>Listing Parents
  <%= link_to 'New Parent', new_parent_path, :class => "btn btn-primary" %> </h1>
</div>
<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.first_name %></td>
        <td><%= parent.last_name %></td>
        <td><%= parent.email %></td>
        <td>
          <%= link_to 'Edit', edit_parent_path(parent), :class => "btn btn-primary"%>
          <%= link_to '', parent, :class => "glyphicon glyphicon-remove-circle",  method: :delete, data: { confirm: 'Are you sure?' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
